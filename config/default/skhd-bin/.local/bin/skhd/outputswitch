#!/usr/bin/env zsh

local deps_list=(
    'SwitchAudioSource'
    'terminal-notifier'
)

function check_deps() {
    [[ ${#@} != 0 ]] || { echo '[!] check_deps :: none passed' && exit 2 }

    local failed

    for dep in "$@"; do
        type "$dep" &>/dev/null || { echo "[!] No $dep installed" && failed=1 }
    done

    [[ -z $failed ]] || { exit 1 }
}

function main() {
    check_deps "${(@)deps_list}"

    terminal-notifier \
        -title 'SwitchAudio' \
        -message "$(SwitchAudioSource -t output -n)"
}

(
    lockf -st 0 8 || { exit 0 }
    trap 'exec 8>&- && rm /tmp/outputswitch_lock' EXIT INT
    main
) 8>/tmp/outputswitch_lock
